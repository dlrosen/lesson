<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>Lessons</title>
</head>
<body>
<center>
<h1>Schools</h1>
<br><br>
<form action="/create_school" method="POST">
    <TABLE BORDER=1 FRAME=BOX RULES=ALL>
    <tr><td><label for="schoolname">School Name</label></td>
        <td><input type="text" name="form_schoolname" id="schoolname" placeholder="School Name"></td>
    </tr>
    <tr><td><label for="schoolactive">Active</label></td>
        <td><select size=1 name="form_schoolactive">
            <option selected>TRUE
            <option>FALSE
            </select></td>
    </tr>
    </table>
    <br>
    <input type="submit">
</form>
<br><a href="/schools/search">Search Schools</a><br>

</center>
</body>
{{ template "footer" }}
</html>